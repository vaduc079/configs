#
# Variables
#
set $wob wob --config ~/.config/sway/wob/wob.ini

#
# Auto start applications/services/softwares on login
#
exec autotiling
exec_always ! pidof foot && foot --server
exec_always "pkill kanshi; kanshi"
exec --no-startup-id fcitx5 -d
# Clipboard manager
exec wl-paste --watch cliphist store

# Get auth work with polkit-gnome
exec /usr/libexec/polkit-gnome-authentication-agent-1

exec_always {
    systemctl --user import-environment
    gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark'
    gsettings set org.gnome.desktop.interface icon-theme 'Adwaita'
    gsettings set org.gnome.desktop.interface cursor-theme 'Adwaita'
    gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
    test -e $SWAYSOCK.wob || mkfifo $SWAYSOCK.wob
    tail -f $SWAYSOCK.wob | $wob
    swaync --style ~/.config/sway/swaync/style.css --config ~/.config/sway/swaync/config.json
}
